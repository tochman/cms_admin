<h2>Events</h2>
<div class="pull-right"><%= link_to 'Create Event', new_event_path, class: 'btn btn-success', remote: true, turbolinks: false %></div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Posted by</th>
    <th>Posted on</th>
    <th>Event Date</th>

    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <%- @events.each do |event| %>
      <tr id="<%= event.title.parameterize %>">
        <td><%= event.title %></td>
        <td><%= event.user.display_name %></td>
        <td><%= event.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= event.start_date.strftime('%d/%m/%Y') %></td>
        <td>
          <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-default btn-xs', remote: true %> |
          <%= link_to 'Delete', event_path(event), class: 'btn btn-danger btn-xs', remote: true, data: {confirm: 'Are you sure you want to delete this event?'}, method: :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
